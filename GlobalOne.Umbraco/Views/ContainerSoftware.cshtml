@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ContainerSoftware>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";
    var lang_cur = System.Threading.Thread.CurrentThread.CurrentUICulture.IetfLanguageTag.ToLower().Substring(0, 2);
    var items = CurrentPage.Descendants("software");
}
<div class="main-container">

    @{Html.RenderPartial("Bredcamp");}

    <section class="bg-white">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8">
                    <div class="media">
                        <img alt="Image" src='@CurrentPage.GetCropUrl("imageCropper", "softwareContainerTopImage")' class="mr-md-5 avatar avatar-xlg" />
                        <div class="media-body">
                            <div class="mb-3">
                                <h1 class="h2 mb-2">@CurrentPage.GetPropertyValue("title_" + lang_cur)</h1>
                            </div>
                            <p>@CurrentPage.GetPropertyValue("shortDescription_" + lang_cur)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="flush-with-above space-0">
        <div class="bg-white">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="projects-tab" data-toggle="tab" href="#projects" role="tab" aria-controls="projects" aria-selected="true">@Umbraco.GetDictionaryValue("TitleForContainerAllSoftware")</a>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="flush-with-above">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="projects" role="tabpanel" aria-labelledby="projects-tab">
                <div class="container">
                    <ul class="row feature-list feature-list-sm">
                        @foreach (var item in items)
                        {
                            <li class="col-12 col-md-6 col-lg-4">
                                <div class="card">


                                    <a href="@item.Url">
                                        <img class="card-img-top" src='@item.GetCropUrl("imageCropper", "softwareContainerImage")' alt="Card image cap">
                                    </a>
                                    <div class="card-body">
                                        <a href="@item.Url">
                                            <h4 class="card-title">@item.GetPropertyValue("title_" + lang_cur)</h4>
                                            <p class="card-text text-body">@item.GetPropertyValue("shortDescription_" + lang_cur)</p>
                                        </a>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </section>
</div>

